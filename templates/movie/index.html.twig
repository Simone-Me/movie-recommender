{% extends 'base.html.twig' %}

{% block title %}Recommandations de Films{% endblock %}

{% block body %}
    <div class="container bg-dark">
        <h1 class="text-center my-4 text-light ">Recommandations de Films</h1>

        <div class="search-form">
            {{ form_start(form) }}
            <div class="row">
                <div class="col-md-6">
                    {{ form_row(form.query) }}
                </div>
                <div class="col-md-3">
                    {{ form_row(form.year) }}
                </div>
                <div class="col-md-3">
                    {{ form_row(form.genre) }}
                </div>
            </div>
            <div class="text-center mt-3">
                {{ form_row(form.submit, { 'attr': {'class': 'btn btn-success'} }) }}
            </div>
            {{ form_end(form) }}
        </div>

        <div class="movie-grid">
            {% for movie in movies %}
                <div class="movie-card">
                    <a href="{{ path('movie_details', {'id': movie.tmdbId}) }}">
                        {% if movie.posterPath %}
                            <img src="https://image.tmdb.org/t/p/w500{{ movie.posterPath }}" alt="{{ movie.title }}" class="movie-poster">
                        {% else %}
                            <div class="movie-poster bg-light d-flex align-items-center justify-content-center">
                                <span>No image available</span>
                            </div>
                        {% endif %}
                        <div class="movie-info">
                            <div class="movie-title">{{ movie.title }}</div>
                            {% if movie.releaseDate %}
                                <div class="movie-year">{{ movie.releaseDate|date('Y') }}</div>
                            {% endif %}
                            <div class="movie-rating">‚≠ê {{ movie.voteAverage|number_format(1) }}/10</div>
                            {% if movie.genres %}
                                <div class="movie-genres">
                                    {% for genreName in tmdbService.getGenreNamesFromIds(movie.genres)|slice(0, 3) %}
                                        <span class="genre-badge">{{ genreName }}</span>
                                    {% endfor %}
                                </div>
                            {% endif %}
                        </div>
                    </a>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
