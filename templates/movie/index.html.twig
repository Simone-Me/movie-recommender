{% extends 'base.html.twig' %}

{% block title %}MovieFinder - Découvrez des films{% endblock %}

{% block body %}
    <div class="hero-section">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 mx-auto text-center">
                    <h1>Trouvez votre prochain film préféré</h1>
                    <p>Explorez notre collection de films et découvrez de nouvelles histoires captivantes</p>
                </div>
            </div>
        </div>
    </div>

    <div class="container">
        <div class="search-form">
            {{ form_start(form) }}
            <div class="row g-3">
                <div class="col-md-6">
                    {{ form_row(form.favorite_dish, {
                        'attr': {'class': 'form-control'},
                        'label': 'Plat préféré',
                        'label_attr': {'class': 'form-label'},
                        'help': 'Choisissez un plat comme si c\'était votre dernier repas'
                    }) }}
                </div>
                <div class="col-md-6">
                    {{ form_row(form.holiday, {
                        'attr': {'class': 'form-control'},
                        'label': 'Destination',
                        'label_attr': {'class': 'form-label'},
                        'help': 'Où iriez-vous en vacances si le monde était en feu'
                    }) }}
                </div>
                <div class="col-md-4">
                    {{ form_row(form.animal, {
                        'attr': {'class': 'form-control'},
                        'label': 'Animal',
                        'label_attr': {'class': 'form-label'},
                        'help': 'Avec quel animal aimeriez-vous être ami'
                    }) }}
                </div>
                <div class="col-md-4">
                    {{ form_row(form.transport, {
                        'attr': {'class': 'form-control'},
                        'label': 'Transport',
                        'label_attr': {'class': 'form-label'},
                        'help': 'Comment aimeriez-vous passer votre journée'
                    }) }}
                </div>
                <div class="col-md-4">
                    {{ form_row(form.dream_job, {
                        'attr': {'class': 'form-control'},
                        'label': 'Emploi de rêve',
                        'label_attr': {'class': 'form-label'},
                        'help': 'Que voudriez-vous être si vous pouviez être n\'importe quoi'
                    }) }}
                </div>
            </div>
            <div class="text-center mt-4">
                {{ form_row(form.submit, { 'attr': {'class': 'btn btn-primary px-5'} }) }}
            </div>
            {{ form_end(form) }}
        </div>

